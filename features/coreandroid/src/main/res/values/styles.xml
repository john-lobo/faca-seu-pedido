<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_fragment_shape</item>
    </style>

    <style name="Style.Button.Black" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_black</item>
    </style>

    <style name="Style.Button.White" parent="android:Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/base_button_white</item>
    </style>


    <style name="Style.Button.Black.ItemProduct" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_item_product_black</item>
    </style>

    <style name="Style.Button.Black.Cart" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_cart_black</item>
    </style>

    <style name="Style.TextInputLayoutRounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

</resources>