<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#DDB3B3B3">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="#DDB3B3B3" />
                    <corners android:topRightRadius="@dimen/dimen_16dp"
                        android:topLeftRadius="@dimen/dimen_16dp"
                        android:bottomRightRadius="@dimen/dimen_08dp"
                        android:bottomLeftRadius="@dimen/dimen_08dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" />
                    <corners android:topRightRadius="@dimen/dimen_16dp"
                        android:topLeftRadius="@dimen/dimen_16dp"
                        android:bottomRightRadius="@dimen/dimen_08dp"
                        android:bottomLeftRadius="@dimen/dimen_08dp" />

                </shape>
            </item>
        </selector>
    </item>
    <item android:id="@android:id/mask">
        <inset>
            <shape android:shape="rectangle">
                <corners android:topRightRadius="@dimen/dimen_16dp"
                    android:topLeftRadius="@dimen/dimen_16dp"
                    android:bottomRightRadius="@dimen/dimen_08dp"
                    android:bottomLeftRadius="@dimen/dimen_08dp" />
                <solid android:color="@color/white"/>
            </shape>
        </inset>
    </item>
</ripple>
