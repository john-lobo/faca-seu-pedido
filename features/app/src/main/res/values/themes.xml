<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FaçaSeuPedido" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FaçaSeuPedido.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FaçaSeuPedido.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FaçaSeuPedido.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>